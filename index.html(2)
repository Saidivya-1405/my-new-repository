<h1>Plant Growth Simulator</h1>
<div id="stageName">Initializing...</div>
<div id="plant">ğŸŒ±</div>

<button class="water" onclick="nextStage()">Water Plant</button>
<button class="reset" onclick="resetPlant()">Reset</button>

<script>
    let stage = 0;

    const stages = [
        { name: "Display Seed", icon: "ğŸŒ±" },
        { name: "Stage 1: Sprout Seed", icon: "ğŸŒ¿" },
        { name: "Stage 2: Stem grows from seed", icon: "ğŸŒ¿ğŸŒ¿" },
        { name: "Stage 3: Add leaves", icon: "ğŸŒ¿ğŸƒ" },
        { name: "Stage 4: Flower blooms", icon: "ğŸŒ¸" },
        { name: "Full Bloom", icon: "ğŸŒº" }
    ];

    function drawPlant() {
        document.getElementById("stageName").innerText = stages[stage].name;
        document.getElementById("plant").innerText = stages[stage].icon;
    }

    function nextStage() {
        if (stage < stages.length - 1) {
            stage++;
            drawPlant();
        }
    }

    function resetPlant() {
        stage = 0;
        drawPlant();
    }

    // Initialize
    drawPlant();
</script>

